{
  "name": "basepack",
  "version": "0.0.1",
  "description": "Ready-to-use service utilities for backend applications with multi-provider support and automatic failover.",
  "keywords": [
    "backend",
    "service",
    "utilities",
    "multi-provider",
    "failover",
    "typescript",
    "email",
    "ses",
    "sendgrid",
    "mailgun",
    "smtp",
    "resend",
    "postmark"
  ],
  "license": "MIT",
  "author": "Praveen Thirumurugan",
  "repository": {
    "type": "git",
    "url": "https://github.com/praveentcom/basepack.git"
  },
  "bugs": "https://github.com/praveentcom/basepack/issues",
  "homepage": "https://github.com/praveentcom/basepack#readme",
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "clean": "rm -rf dist",
    "dev": "tsup --watch",
    "prepare": "npm run build",
    "prepublishOnly": "npm run build && npm run test:unit",
    "test": "npm run test:unit",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "version": "npm run build && git add -A dist",
    "postversion": "git push && git push --tags"
  },
  "devDependencies": {
    "@aws-sdk/client-ses": "^3.908.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^24.7.1",
    "@types/nodemailer": "^6.4.16",
    "dotenv": "^16.4.5",
    "jest": "^29.7.0",
    "nodemailer": "^6.9.16",
    "ts-jest": "^29.2.5",
    "tsup": "^8.0.1",
    "typescript": "^5.4.5"
  },
  "peerDependencies": {
    "@aws-sdk/client-ses": "^3.0.0",
    "nodemailer": "^6.0.0"
  },
  "peerDependenciesMeta": {
    "@aws-sdk/client-ses": {
      "optional": true
    },
    "nodemailer": {
      "optional": true
    }
  }
}
